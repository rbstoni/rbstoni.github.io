@namespace Rtrw.Client.Wasm.Components.Input
@inherits RtrwComponentBase

<label @attributes="UserAttributes" class="@Classname" style="@Style" for="@ForId">
    @ChildContent
</label>

@code {
    protected string Classname 
        => new CssBuilder()
            .AddClass("rtrw-input-label")
            .AddClass("rtrw-input-label-animated")
            .AddClass($"rtrw-input-label-{Variant.EnumToDescriptionString()}")
            .AddClass($"rtrw-input-label-margin-{Margin.EnumToDescriptionString()}", when: () => Margin != Margin.None)
            .AddClass($"rtrw-disabled", Disabled)
            .AddClass("rtrw-input-error", Error)
            .AddClass(Class)
            .Build();

    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Error { get; set; }
    [Parameter] public Margin Margin { get; set; } = Margin.None;
    [Parameter] public Variant Variant { get; set; } = Variant.Text;
    [Parameter] public string ForId { get; set; } = string.Empty;
}