@namespace Rtrw.Client.Wasm.Components
@inherits RtrwComponentBase

<div tabindex="0" @attributes="UserAttributes" class="@Classname" @onclick="OnClickHandler" @onclick:stopPropagation="true" style="@Style">
    <div class="rtrw-list-item-text">
        @ChildContent
    </div>
    @if (NestedList != null)
    {
        if (expanded)
        {
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                <path fill-rule="evenodd" d="M18.78 15.28a.75.75 0 000-1.06l-6.25-6.25a.75.75 0 00-1.06 0l-6.25 6.25a.75.75 0 101.06 1.06L12 9.56l5.72 5.72a.75.75 0 001.06 0z"></path>
            </svg>
        }
        else
        {
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                <path fill-rule="evenodd" d="M5.22 8.72a.75.75 0 000 1.06l6.25 6.25a.75.75 0 001.06 0l6.25-6.25a.75.75 0 00-1.06-1.06L12 14.44 6.28 8.72a.75.75 0 00-1.06 0z"></path>
            </svg>
        }
    }
</div>
@if (NestedList != null)
{
    <RtrwCollapse Expanded="@Expanded">
        <RtrwList Clickable="RtrwList?.Clickable ?? false" Color="RtrwList?.Color ?? primary" DisablePadding="true" Class="rtrw-nested-list" Disabled="@Disabled">
            @NestedList
        </RtrwList>
    </RtrwCollapse>
}
