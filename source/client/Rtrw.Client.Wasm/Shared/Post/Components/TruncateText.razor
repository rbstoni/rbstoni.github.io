@if (truncatedView)
{
    @truncatedText
    <span>&hellip;</span>
    <span class="truncate-button" type="button" @onclick="OnClickHandler" @onclick:stopPropagation="true">Selengkapnya</span>
}
else
{
    @Text
}

@code {
    [Parameter]
    public string Text { get; set; }
    string truncatedText => Text.Length > 160 ? Text.Substring(0, 160):string.Empty;
    bool truncatedView;
    void OnClickHandler() => truncatedView = false;

    protected override void OnInitialized()
    {
        truncatedView = !string.IsNullOrEmpty(truncatedText);
    }
}