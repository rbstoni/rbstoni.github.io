@code {
    int task = 10;
    string[]? reports;
    Dummy Dummy { get; set; } = new Dummy();
    Task<Warga>[] tasks = new Task<Warga>[5];
    [CascadingParameter] RtrwModalInstance? Modal { get; set; }

    protected override void OnInitialized()
    {
        for (var i = 0; i < tasks.Length; i++)
        {
            tasks[i] = Task<Warga>.Run(() => Dummy.GenerateFakeWarga().Generate());
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        foreach (var task in tasks)
        {
            var warga = task.Result;
            await PostService.SavePostAsync(warga.Posts);
            reports.Append($"{warga.FullName} telah dibuat");
        }

        Modal.Close(ModalResult.Ok(true));
    }
}