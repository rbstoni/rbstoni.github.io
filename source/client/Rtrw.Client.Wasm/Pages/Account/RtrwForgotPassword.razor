@page "/account/forgot-password"
@using Rtrw.Client.Wasm.Components.Enums
@using Rtrw.Client.Wasm.Services
@inject IWindowHistoryService WindowHistory
@inject NavigationManager Navigation

<RtrwAppBar Position="sticky-top" Style="filter: drop-shadow(0px 1px 3px rgba(0, 0, 0, 0.16));">
    <StartBarContent>
        <RtrwIconButton OnClick="@(()=>WindowHistory.Back())">
            <RtrwSvgChevronLeft></RtrwSvgChevronLeft>
        </RtrwIconButton>
    </StartBarContent>
    <EndBarContent>
        <RtrwSvgHorizontalLogo @onclick="@(()=>Navigation.NavigateTo("/"))"></RtrwSvgHorizontalLogo>
    </EndBarContent>
</RtrwAppBar>

<main class="body-layout">
    <RtrwForm Model="@Phone">
        <div>Masukkan nomor ponsel Anda:</div>
        <RtrwTextField T="string"
                       @bind-Value="@Phone"
                       For="@(()=>Phone)"
                       Label="No. Telp"
                       InputType="InputType.Text"
                       Variant="@Variant.Outlined"
                       Immediate
                       Clearable>
        </RtrwTextField>
    </RtrwForm>
</main>

@code {
    [Parameter] public string Phone { get; set; } = string.Empty;
}