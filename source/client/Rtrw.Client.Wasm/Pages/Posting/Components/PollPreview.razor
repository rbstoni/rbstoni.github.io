                  transform="translate(-4 -4)"
                  fill="var(--rtrw-danger)" />
        </svg>
    </div>
</div>
<div class="rtrw-flex rtrw-flex-col">
    @foreach (var answer in Poll.Answers)
    {
        <div class="polling-result-item">
            <div class="rtrw-body-text">@answer.Answer</div>
        </div>
    }
</div>

@code {
    [Parameter] public Poll Poll { get; set; } = new();
    [Parameter] public EventCallback OnPollDelete { get; set; }
    void DeletePoll()
    {
        OnPollDelete.InvokeAsync();
    }
}